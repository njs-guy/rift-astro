---
import { type Section, type SubSection } from "../scripts/summarySection";
import DocSummarySection from "./DocSummarySection.astro";

interface Props {
	collectionName?: string;
	summary?: Section[];
}

const defaultSection: Section[] = [
	{
		title: "A section",
		subsections: [{ title: "This is a link", link: "https://www.google.com" }],
	},
];

const { collectionName = "docs", summary = defaultSection } = Astro.props as Props;
---

<ul class="menu menu-sm doc-summary h-full">
	{
		summary.map((section) => (
			<li>
				<DocSummarySection section={section} />
			</li>
		))
	}
</ul>
