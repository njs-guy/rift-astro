---
interface Props {
	title?: string;
	text?: string;
	button?: boolean;
	buttonText?: string;
	buttonLink?: string;
}

const {
	title = "Hey.",
	text = "This is how we be.",
	button = false,
	buttonText = "Get Started",
	buttonLink = "https://docs.astro.build/en/getting-started/",
} = Astro.props as Props;
---

<div class="hero min-h-screen bg-base-200">
	<div class="hero-content text-center">
		<div class="max-w-md">
			<h1 class="text-5xl font-bold">{title}</h1>
			<p class="py-6">
				{text}
			</p>
			{
				button && (
					<a
						href={buttonLink}
						class="btn btn-primary"
					>
						{buttonText}
					</a>
				)
			}
		</div>
	</div>
</div>
