---
import { getCollection } from "astro:content";
import DocLayout from "../../layouts/DocLayout.astro";
import PageNav from "../../components/PageNav.astro";

import { getRiftConfig, getDocSidebar, type DocSideBarItem } from "../../scripts/riftConfig";

export async function getStaticPaths() {
	const docPages = await getCollection("docs");

	return docPages.map((page) => ({
		params: {
			slug: page.slug,
		},
		props: {
			page,
		},
	}));
}

const sidebar = getDocSidebar();

const { page } = Astro.props;
const { Content } = await page.render();
---

<DocLayout summary={sidebar}>
	<div class="md-content doc-content">
		<Content />
		<br />
		<PageNav
			previous={page.data.previous}
			previousLabel={page.data.previousLabel}
			nextLabel={page.data.nextLabel}
			next={page.data.next}
		/>
	</div>
</DocLayout>
