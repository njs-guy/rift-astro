---
import Layout from "../layouts/Layout.astro";

import Hero from "../components/Hero.astro";
import Card from "../components/Card.astro";
---

<Layout title="Rift for Astro">
	<div class="flex flex-col gap-3">
		<h1 class="heading1">Rift for Astro</h1>
		<h3 class="heading3">We couldn't come up with a catchy tagline</h3>
		<h4 class="heading4 dim-text">How unfortunate.</h4>
		<div class="flex flex-row gap-3">
			<a class="btn btn-primary btn-sm">Get started</a>
			<a class="btn btn-neutral btn-sm">View on GitHub</a>
		</div>
		<br />
		<div class="rift-grid grid-cols-3">
			<Card />
			<Card />
			<Card />
		</div>
	</div>
</Layout>
